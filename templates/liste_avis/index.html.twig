{% extends 'base.html.twig' %}

{% block title %}Vos Avis
{% endblock %}

{% block body %}


	<!-- ======= Our Team Section ======= -->
	<section id="team" class="team">
		<div class="container">

			<div class="section-title">
				<h2>Les avis de nos utilisateurs</h2>
				<p>
					{% if (avis is defined) %}
						{% for avi in avis|slice(0, 15) %}

							{{ avi.description }}
<br><br>
						{% endfor %}
					{% endif %}
				</p>

			</div>
		</section>


	{% endblock %}
